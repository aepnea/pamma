    <%= f.label "Nombre Completo" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "Edad" %><br>
    <%= f.number_field :age %>
  </div>
  <div class="field">
    <%= f.label "Relación Familiar" %><br>
    <%= f.number_field :relationship_type_id %>
  </div>
  <div class="field">
    <%= f.label "Actividad" %><br>
    <%= f.text_field :activity %>
  </div>
