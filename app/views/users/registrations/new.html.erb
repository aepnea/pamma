<div class="mdl-grid">
  <div class="title-row mdl-cell mdl-cell--12-col">
    <h2 class="title-form">Para ingresar necesitas llenar el siguiente formulario <span>(son solo 3 pasos..)</span></h2>
  </div>
  <div class="mdl-cell mdl-cell--6-col steps">
    <%= form_for(resource, as: resource_name, html: {id: "login-form", class: "login-form"}, remote: true,format: :json, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="step1 step active">
        <h3 class="title-h3">
          <span>01</span><p> Datos personales</p>
        </h3>
        <div class="field">
          <%= f.label "Nombre:" %><br />
          <%= f.text_field :first_name, autofocus: true %>
          <div id='error_nombre'></div>
        </div>

        <div class="field">
          <%= f.label "Apellido Paterno:" %><br />
          <%= f.text_field :last_name, autofocus: true %>
          <div id='error_apellido-p'></div>
        </div>

        <div class="field">
          <%= f.label "Apellido Materno:" %><br />
          <%= f.text_field :surname, autofocus: true %>
          <div id='error_apellido-m'></div>
        </div>

        <div class="field">
          <%= f.label "Rut:" %><br />
          <%= f.text_field :rut, autofocus: true %>
          <div id='error_rut'></div>
        </div>

        <div class="field">
          <%= f.label "Fecha Nacimiento:" %><br />
          <%= f.date_field :birthdate, autofocus: true %>
          <div id='error_fecha-nacimiento'></div>
        </div>

        <div class="field">
          <%= f.label "Género:" %>
          <%= f.collection_select :gender_id, GenderType.all, :id, :name %>
          <div id='error_genero'></div>
        </div>

        <div class="field">
          <%= f.label "Estado Civil:" %>
          <%= f.collection_select :civil_status_id, CivilStatusType.all, :id, :name %>
          <div id='error_estad-civil'></div>
        </div>

        <div class="path-step" data-position='1'>
          <p>Siguiente</p>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16.47 15.85"><defs><style>.cls-1{fill:#e93c46;}</style></defs><title>arrow-right</title><g id="Layer_2" data-name="Layer 2"><g id="Layer_2-2" data-name="Layer 2"><path class="cls-1" d="M10.71,13.69l5.69-5.6a.22.22,0,0,0,0-.31l-5.69-5.6a.13.13,0,0,0-.22.09V5.87c0,.16.07.25.22.4l1.59,1.56c.07.07.07.11,0,.18L10.71,9.58c-.16.16-.22.25-.22.4V13.6a.13.13,0,0,0,.22.09"/><path class="cls-1" d="M.22,15.81,8,8.08a.22.22,0,0,0,0-.31L.22,0A.13.13,0,0,0,0,.14V3.75c0,.16.07.25.22.4L3.93,7.84c.07.07.07.11,0,.18L.22,11.7c-.16.16-.22.25-.22.4v3.62a.13.13,0,0,0,.22.09"/></g></g></svg>
        </div>
      </div>
      <!--fin step1  -->
      
      <div class="step2 step">
        <h3 class="title-h3">
          <span>02</span><p>Como ubicarte</p>
        </h3>
        <div class="field">
          <%= f.label "Dirección:" %><br />
          <%= f.text_field :address, autofocus: true %>
          <div id='error_direccion'></div>
        </div>

        <div class="field">
          <%= f.label "Población o Villa:" %><br />
          <%= f.text_field :village, autofocus: true %>
          <div id='error_villa'></div>
        </div>

        <div class="field">
          <%= f.label "Teléfono Movil:" %><br />
          <%= f.text_field :mobile, autofocus: true %>
          <div id='error_telefono-cel'></div>
        </div>

        <div class="field">
          <%= f.label "Teléfono Fijo:" %><br />
          <%= f.text_field :landline, autofocus: true %>
          <div id='error_telefono-fijo'></div>
        </div>

        <div class="field">
          <%= f.label "Región:" %>
          <%= f.collection_select :region_id, Region.all, :id, :name %>
          <div id='error_region'></div>
        </div>

        <div class="field">
          <%= f.label "Provincia:" %>
          <%= f.collection_select :province_id, Province.all, :id, :name %>
          <div id='error_provincia'></div>
        </div>

        <div class="field">
          <%= f.label "Comuna:" %>
          <%= f.collection_select :commune_id, Commune.all, :id, :name %>
          <div id='error_comuna'></div>
        </div>
        <div class="back-step" data-position='1'>
          <p>Atras</p>
        </div>
        <div class="path-step" data-position='2'>
          <p>Siguiente</p>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16.47 15.85"><defs><style>.cls-1{fill:#e93c46;}</style></defs><title>arrow-right</title><g id="Layer_2" data-name="Layer 2"><g id="Layer_2-2" data-name="Layer 2"><path class="cls-1" d="M10.71,13.69l5.69-5.6a.22.22,0,0,0,0-.31l-5.69-5.6a.13.13,0,0,0-.22.09V5.87c0,.16.07.25.22.4l1.59,1.56c.07.07.07.11,0,.18L10.71,9.58c-.16.16-.22.25-.22.4V13.6a.13.13,0,0,0,.22.09"/><path class="cls-1" d="M.22,15.81,8,8.08a.22.22,0,0,0,0-.31L.22,0A.13.13,0,0,0,0,.14V3.75c0,.16.07.25.22.4L3.93,7.84c.07.07.07.11,0,.18L.22,11.7c-.16.16-.22.25-.22.4v3.62a.13.13,0,0,0,.22.09"/></g></g></svg>
        </div>
      </div>
      <!-- fin step2-->
    
      
      <div class="step3 step">
        <h3 class="title-h3">
          <span>03</span><p>Ultimos datos y contraseña</p>
        </h3>
        <div class="field">
          <%= f.label "Nombre Sociedad Minera a la que Pertenece:" %><br />
          <%= f.text_field :minning_society_name, autofocus: true %>
          <div id='error_sociedad'></div>
        </div>

        <div class="field">
          <%= f.label "RUT Sociedad Minera a la que Pertenece:" %><br />
          <%= f.text_field :minning_society_rut, autofocus: true %>
          <div id='error_rut-sociedad'></div>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true %>
          <div id='error_email'></div>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off" %>
          <div id='error_password'></div>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
          <div id='error_password-confirm'></div>
        </div>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>

        <div class="back-step" data-position='2'>
          <p>Atras</p>
        </div>

      </div>
      
    <% end %>
    
    <div class="none">
      <%= render "users/shared/links" %>
    </div>

  </div>
</div>