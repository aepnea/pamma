<div class="formulario">
  <div class="title-row">
    <h2 class="title">Edit <%= resource_name.to_s.humanize %></h2>
  </div>
  <div class="steps">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <div class="step-container">
        <div class="step1 step">
          <div class="step-inner">
            <div class="maps">
              <div class="map map-activo"></div>
              <div class="map"></div>
              <div class="map"></div>
            </div>
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="field">
              <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
              <%= f.password_field :password, autocomplete: "off" %>
              <% if @minimum_password_length %>
                <br />
                <em><%= @minimum_password_length %> characters minimum</em>
              <% end %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
            </div>

            <div class="field">
              <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
              <%= f.password_field :current_password, autocomplete: "off" %>
            </div>

            <div class="actions">
              <%= f.submit "Update", class: "submit" %>
            </div>
          </div>
        </div>
        <!--fin step1  -->
        <div class="step2 step">
          <div class="step-inner">
            <div class="maps">
              <div class="map"></div>
              <div class="map map-activo"></div>
              <div class="map"></div>
            </div>
            <div class="field">
              <%= f.label "Nombre:" %><br />
              <%= f.text_field :first_name %>
            </div>

            <div class="field">
              <%= f.label "Apellido Paterno:" %><br />
              <%= f.text_field :last_name %>
            </div>

            <div class="field">
              <%= f.label "Apellido Materno:" %><br />
              <%= f.text_field :surname %>
            </div>

            <div class="field">
              <%= f.label "Rut:" %><br />
              <%= f.text_field :rut %>
            </div>

            <div class="field">
              <%= f.label "Fecha Nacimiento:" %><br />
              <%= f.date_field :birthdate, class: "datepicker" %>
            </div>

            <div class="field">
              <%= f.label "Género:" %>
              <%= f.collection_select :gender_id, GenderType.all, :id, :name %>
            </div>

            <div class="field">
              <%= f.label "Estado Civil:" %>
              <%= f.collection_select :civil_status_id, CivilStatusType.all, :id, :name %>
            </div>
          </div>
        </div>
        <div class="step3 step">
          <div class="step-inner">
            <div class="maps">
              <div class="map"></div>
              <div class="map"></div>
              <div class="map map-activo"></div>
            </div>
            <div class="field">
              <%= f.label "Dirección:" %><br />
              <%= f.text_field :address %>
            </div>

            <div class="field">
              <%= f.label "Población o Villa:" %><br />
              <%= f.text_field :village %>
            </div>

            <div class="field">
              <%= f.label "Teléfono Movil:" %><br />
              <%= f.text_field :mobile %>
            </div>

            <div class="field">
              <%= f.label "Teléfono Fijo:" %><br />
              <%= f.text_field :landline %>
            </div>

            <div class="field">
              <%= f.label "Región:" %>
              <%= f.collection_select :region_id, Region.all, :id, :name %>
            </div>

            <div class="field">
              <%= f.label "Provincia:" %>
              <%= f.collection_select :province_id, Province.all, :id, :name %>
            </div>

            <div class="field">
              <%= f.label "Comuna:" %>
              <%= f.collection_select :commune_id, Commune.all, :id, :name %>
            </div>

            <div class="field">
              <%= f.label "Nombre Sociedad Minera a la que Pertenece:" %><br />
              <%= f.text_field :minning_society_name %>
            </div>

            <div class="field">
              <%= f.label "RUT Sociedad Minera a la que Pertenece:" %><br />
              <%= f.text_field :minning_society_rut %>
            </div>
          </div>
        </div>


    <% end %>

    <% if current_user == current_admin %>
      <h3>Cancel my account</h3>

      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
    <% end %>
  </div>
</div>
