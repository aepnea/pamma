<div class="formulario">
  <div class="title-row">
    <h2 class="title">Edit <%= resource_name.to_s.humanize %></h2>
  </div>
  <div class="steps">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="step-container center">
        <div class="step1 step col-md-6">
          <div class="step-inner">
            <div class="maps">
              <div class="map map-activo"></div>
              <div class="map"></div>
              <div class="map"></div>
            </div>
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="field">
              <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
              <%= f.password_field :password, autocomplete: "off" %>
              <% if @minimum_password_length %>
                <br />
                <em><%= @minimum_password_length %> characters minimum</em>
              <% end %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
            </div>

            <div class="field">
              <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
              <%= f.password_field :current_password, autocomplete: "off" %>
            </div>
            <div class="actions">
              <%= f.submit "Update" %>
            </div>
          </div>
        </div>
        <!--fin step1  -->
        <div class="step2 step col-md-6">
          <div class="step-inner">
            <div class="maps">
              <div class="map"></div>
              <div class="map map-activo"></div>
              <div class="map"></div>
            </div>
            <div class="field">
              <%= f.label "Nombre:" %><br />
              <%= f.text_field :name %>
            </div>

            <div class="field">
              <%= f.label "Rut:" %><br />
              <%= f.text_field :rut %>
            </div>

            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email %>
            </div>

            <div class="field">
              <%= f.label "Número de Asociados:" %><br />
              <%= f.number_field :partners_number %>
            </div>

            <div class="field">
              <%= f.label "Fecha Fundación:" %><br />
              <%= f.date_field :date_foundation %>
            </div>

            <div class="field">
              <%= f.label "Dirección:" %><br />
              <%= f.text_field :address %>
            </div>

            <div class="field">
              <%= f.label "Villa o Población:" %><br />
              <%= f.text_field :village %>
            </div>

            <div class="field">
              <%= f.label "Región:" %>
              <%= f.collection_select :region_id, Region.all, :id, :name %>
            </div>

            <div class="field">
              <%= f.label "Provincia:" %>
              <%= f.collection_select :province_id, Province.all, :id, :name %>
            </div>

            <div class="field">
              <%= f.label "Comuna:" %>
              <%= f.collection_select :commune_id, Commune.all, :id, :name %>
            </div>
          </div>
        </div>

    <% end %>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>
</div>
