<div class="row">
  <div class="col-md-12">
    <%= form_for(@personal_background) do |f| %>
      <% if @personal_background.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@personal_background.errors.count, "error") %> prohibited this personal_background from being saved:</h2>

          <ul>
          <% @personal_background.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="inner-file">
        <div class="header-file">
          <div class="col-md-8 center">
            <div class="header-cont">
              <div class="pull-left">
                <%= link_to personal_backgrounds_path do %>
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16.47 15.85"><defs><style>.cls-1{fill:#fff;}</style></defs><title>left</title><g id="Layer_2" data-name="Layer 2"><g id="Layer_2-2" data-name="Layer 2"><path class="cls-1" d="M5.76,2.17.07,7.77a.22.22,0,0,0,0,.31l5.69,5.6A.13.13,0,0,0,6,13.6V10c0-.16-.07-.25-.22-.4L4.17,8c-.07-.07-.07-.11,0-.18L5.76,6.27C5.92,6.12,6,6,6,5.87V2.26a.13.13,0,0,0-.22-.09"/><path class="cls-1" d="M16.24,0,8.43,7.77a.22.22,0,0,0,0,.31l7.81,7.72a.13.13,0,0,0,.22-.09V12.1c0-.16-.07-.25-.22-.4L12.54,8c-.07-.07-.07-.11,0-.18l3.71-3.68c.16-.16.22-.25.22-.4V.14A.13.13,0,0,0,16.24,0"/></g></g></svg>
                  volver
                <% end %>
              </div>
              <div class="pull-right">
                <div class="file-text">
                  <h3>Antecedentes Personales</h3>
                  <p>Tus antecedentes completalos aqu√≠.</p>
                </div>
                <div class="file-count"><p>01</p></div>
              </div>
            </div>
          </div>
        </div>
        
        <div class="body-form step-inner">
          <div class="form-group">
            <div class="form-2">
              <div class="field">
                <%= f.label :scholarship_type_id %><br>
                <%= f.collection_select :scholarship_type_id, ScholarshipType.all, :id, :name %>
              </div>
              <div class="field">
                <%= f.label :activity_type_id %><br>
                <%= f.collection_select :activity_type_id, ActivityType.all, :id, :name %>
              </div>
            </div>
            <div class="form-3">
              <div class="field">
                <%= f.label :retirement_system_type_id %><br>
                <%= f.collection_select :retirement_system_type_id, RetirementSystemType.all, :id, :name %>
              </div>
              <div class="field">
                <%= f.label :social_record_status_type_id %><br>
                <%= f.collection_select :social_record_status_type_id, SocialRecordStatusType.all, :id, :name %>
              </div>
              <div class="field">
                <%= f.label :score %><br>
                <%= f.number_field :score %>
              </div>
            </div>
            <div class="form-2">
              <div class="field">
                <%= f.label :training_type_id %><br>
                <%= f.collection_select :training_type_id, TrainingType.all, :id, :name %>
              </div>
              <div class="field">
                <%= f.label :last_poll %><br>
                <%= f.date_field :last_poll, class: "datepicker" %>
              </div>
            </div>
            <div>
              <%= f.submit "Agregar", class: "create"  %>
            </div>
            <div class="field">
              <%= f.hidden_field :user_id %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
