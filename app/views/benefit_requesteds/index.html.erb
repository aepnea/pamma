<p id="notice"><%= notice %></p>

<h1>Listing Benefit Requesteds</h1>

<table>
  <thead>
    <tr>
      <th>Benefit type</th>
      <th>Estimated investment</th>
      <th>Comments</th>
      <th>User</th>
      <th>Asociative user</th>
      <th>Postulation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @benefit_requesteds.each do |benefit_requested| %>
      <tr>
        <td><%= benefit_requested.benefit_type_id %></td>
        <td><%= benefit_requested.estimated_investment %></td>
        <td><%= benefit_requested.comments %></td>
        <td><%= benefit_requested.user_id %></td>
        <td><%= benefit_requested.asociative_user_id %></td>
        <td><%= benefit_requested.postulation_id %></td>
        <td><%= link_to 'Show', benefit_requested %></td>
        <td><%= link_to 'Edit', edit_benefit_requested_path(benefit_requested) %></td>
        <td><%= link_to 'Destroy', benefit_requested, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

